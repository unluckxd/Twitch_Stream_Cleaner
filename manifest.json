{
  "manifest_version": 2,
  "name": "Twitch Stream Cleaner",
  "version": "2.0.8",
  "description": "Advanced ad blocking with UI and statistics.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*.twitch.tv/*",
    "*://*.ttvnw.net/*"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icon-48.png",
      "96": "icon-96.png"
    },
    "default_title": "Stream Cleaner Settings",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-stream-cleaner@addon.mozilla.org",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}