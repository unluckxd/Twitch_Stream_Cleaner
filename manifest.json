{
  "manifest_version": 2,
  "name": "Twitch Stream Cleaner",
  "version": "2.3.1",
  "description": "Watch streams, not ads.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*.twitch.tv/*",
    "*://*.ttvnw.net/*",
    "*://gql.twitch.tv/*",
    "*://usher.ttvnw.net/*"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icon-48.png",
      "96": "icon-96.png"
    },
    "default_title": "Stream Cleaner Settings",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "stream-fetcher.js",
    "sw-relay.js"
  ],
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-stream-cleaner@addon.mozilla.org",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}